{
    "name": "Social Feed Blocker",
    "version": "1.0.0",
    "description": "Block distracting social media feeds with a focused popup",
	"manifest_version": 3,
	"permissions": ["storage", "scripting"],
	"optional_host_permissions": [
		"*://*.facebook.com/*",
		"*://twitter.com/*",
		"*://*.twitter.com/*",
		"*://x.com/*",
		"*://*.reddit.com/*",
		"*://news.ycombinator.com/*",
		"*://*.linkedin.com/*",
		"*://*.youtube.com/*",
		"*://*.instagram.com/*",
		"https://substack.com/*",
		"*://tiktok.com/*",
		"*://*.tiktok.com/*",
		"*://threads.com/*",
		"*://*.threads.com/*"
	],
	"action": {
		"default_icon": {
			"16": "icon16.png",
			"32": "icon32.png",
			"48": "icon48.png",
			"64": "icon64.png",
			"128": "icon128.png"
		},
        "default_title": "Social Feed Blocker"
	},
	"background": {
		"service_worker": "service-worker.js",
		"type": "module"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true,
		"browser_style": false
	},
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"64": "icon64.png",
		"128": "icon128.png"
	},
    "web_accessible_resources": [
        {
            "resources": [
                "transparent-icon.png",
                "transparent-icon-green.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
