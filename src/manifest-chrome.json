{
    "name": "Social Feed Blocker",
    "version": "1.0.1",
    "description": "Block distracting social media feeds and reclaim your focus",
	"manifest_version": 3,
	"permissions": ["storage", "scripting"],
	"optional_host_permissions": [
		"https://facebook.com/*",
		"https://*.facebook.com/*",
		"https://twitter.com/*",
		"https://*.twitter.com/*",
		"https://x.com/*",
		"https://reddit.com/*",
		"https://*.reddit.com/*",
		"https://news.ycombinator.com/*",
		"https://linkedin.com/*",
		"https://*.linkedin.com/*",
		"https://youtube.com/*",
		"https://*.youtube.com/*",
		"https://instagram.com/*",
		"https://*.instagram.com/*",
		"https://substack.com/*",
		"https://tiktok.com/*",
		"https://*.tiktok.com/*",
		"https://threads.com/*",
		"https://*.threads.com/*"
	],
	"action": {
		"default_icon": {
			"16": "icon16.png",
			"32": "icon32.png",
			"48": "icon48.png",
			"64": "icon64.png",
			"128": "icon128.png"
		},
        "default_title": "Social Feed Blocker"
	},
	"background": {
		"service_worker": "service-worker.js",
		"type": "module"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true,
		"browser_style": false
	},
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"64": "icon64.png",
		"128": "icon128.png"
	},
    "web_accessible_resources": [
        {
            "resources": [
                "transparent-icon.png",
                "transparent-icon-green.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
