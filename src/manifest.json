{
    "name": "Social Feed Blocker",
	"version": "1.0.0",
    "description": "Block distracting social media feeds with a focused popup",
	"manifest_version": 2,
	"permissions": ["storage"],
	"optional_permissions": [
		"https://facebook.com/*",
		"https://*.facebook.com/*",
		"https://twitter.com/*",
		"https://*.twitter.com/*",
		"https://x.com/*",
		"https://reddit.com/*",
		"https://*.reddit.com/*",
		"https://news.ycombinator.com/*",
		"https://linkedin.com/*",
		"https://*.linkedin.com/*",
		"https://youtube.com/*",
		"https://*.youtube.com/*",
		"https://instagram.com/*",
		"https://*.instagram.com/*",
		"https://substack.com/*",
		"https://tiktok.com/*",
		"https://*.tiktok.com/*",
		"https://threads.com/*",
		"https://*.threads.com/*"
	],
	"browser_action": {
		"default_icon": {
			"16": "icon16.png",
			"32": "icon32.png",
			"64": "icon64.png",
			"128": "icon128.png"
		},
        "default_title": "Social Feed Blocker"
	},
	"background": {
		"page": "background.html"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true,
		"browser_style": false,
		"chrome_style": false
	},
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"64": "icon64.png",
		"128": "icon128.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "@news-feed-eradicator"
		}
	}
}
